<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MovieActivity">

    <ImageView
        android:id="@+id/movie_img_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/shadows"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/movie_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        app:layout_constraintTop_toTopOf="@id/movie_img_header"
        app:layout_constraintStart_toStartOf="@id/movie_img_header"
        app:layout_constraintEnd_toEndOf="@id/movie_img_header"
        app:layout_constraintBottom_toBottomOf="@id/movie_img_header"
        android:src="@drawable/ic_play"
        android:layout_width="72dp"
        android:layout_height="72dp"/>

    <TextView
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/movie_img_header"
        tools:text="Movie Title"
        android:textColor="@color/white"
        android:id="@+id/movie_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:ellipsize="end"
        android:maxLines="3"
        android:lineSpacingExtra="3sp"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/movie_img_header"
        android:textColor="@color/grey_light"
        tools:text="Desc MovieDesc MovieDesc MovieDesc MovieDesc MovieDesc Movie"
        android:id="@+id/movie_txt_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:ellipsize="end"
        android:maxLines="3"
        android:lineSpacingExtra="3sp"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/movie_txt_desc"
        android:textColor="@android:color/darker_gray"
        tools:text="Desc MovieDesc MovieDesc MovieDesc MovieDesc MovieDesc Movie"
        android:id="@+id/movie_txt_cast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="14sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/movie_txt_cast"
        android:textColor="@color/white"
        android:text="@string/similar"
        android:id="@+id/txt_fixed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_fixed"
        android:id="@+id/movie_rv_similar"
        tools:listitem="@layout/movie_item_similar"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>